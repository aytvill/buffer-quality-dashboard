<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Quality Dashboard</title>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="/styles/main.css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
        <!-- NB this includes moment.js as well -->
        <script src="//cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.bundle.min.js"></script>
        <script src="/js/script.js"></script>
    </head>

    <body>
        <div class="jumbotron">
            <div class="container-fluid">
                <p>
                Buffer Quality Dashboard!
                </p>
            </div> <!-- container-fluid -->
        </div> <!-- jumbotron -->

        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-4 col-sm-push-8">
                    <div class="row">
                        <div class="col-xs-6 col-sm-12">
                            <div class="card alert alert-info number-container">
                                <h3>Important Issues</h3>
                                <p class="number">
                                    <%= importantIssueTotal %>
                                </p>
                            </div> <!-- number-container -->
                        </div> <!-- col-xs-6 -->

                        <div class="col-xs-6 col-sm-12">
                            <div class="card alert alert-success number-container">
                                <h3>Total Issues</h3>
                                <p class="number">
                                    <%= issueTotal %>
                                </p>
                            </div> <!-- number-container -->
                        </div> <!-- col-xs-6 -->
                    </div> <!-- row -->
                </div> <!-- col-xs-12 col-sm-4 -->

                <div class="col-xs-12 col-sm-8 col-sm-pull-4">
                    <div class="card chart-container">
                        <h3>GitHub issues over time</h3>
                        <div class="chart">
                            <canvas id="issuesChart" width="400" height="400"></canvas>
                        </div>
                    </div> <!-- chart-container -->
                </div> <!-- col-xs-12 col-sm-8 -->

            </div> <!-- row -->
        </div> <!-- container -->
    </body>
</html>
